{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_section_edit' %}

{% block main %}
    <h1>{{ 'title.edit_section'|trans({'%id%': section.id}) }}</h1>

    {{ include('admin/section/_form.html.twig', {
        form: form,
        button_label: 'action.save'|trans,
        include_back_to_home_link: true,
    }, with_context = false) }}
{% endblock %}

{% block sidebar %}
    <div class="section">
        <a href="{{ path('admin_section_edit', {id: section.id}) }}" class="btn btn-lg btn-block btn-success">
            <i class="fa fa-eye" aria-hidden="true"></i> {{ 'action.show_section'|trans }}
        </a>
    </div>

    <div class="section actions">
        {{ include('admin/section/_delete_form.html.twig', {section: section}, with_context = false) }}
    </div>

    {{ parent() }}

{% endblock %}
